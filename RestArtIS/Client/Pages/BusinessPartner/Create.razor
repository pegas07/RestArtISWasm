@page "/businesspartner/create"
@inject HttpClient http
@inject NavigationManager uriHelper

<MudText Class="mb-5" Typo="Typo.h3">Nový obchodní partner</MudText>
<Form ButtonText="Vytvořit partnera" bp="@bp"
      OnValidSubmit="@CreateBusinessPartner" />
@code {
    BusinessPartner bp = new BusinessPartner();
    async Task CreateBusinessPartner()
    {
        await http.PostAsJsonAsync("api/businesspartner", bp);
        uriHelper.NavigateTo("businesspartner");
    }
}